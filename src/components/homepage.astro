<style>
  .homepage {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero-section {
    text-align: center;
    padding: 4rem 0;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 300;
    margin-bottom: 1rem;
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--color-neutral-600);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--color-blue-500);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-blue-600);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-blue-500);
    border: 2px solid var(--color-blue-500);
  }

  .btn-secondary:hover {
    background: var(--color-blue-50);
  }

  .hero-section-alt {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    padding: 4rem 0;
    margin-bottom: 2rem;
  }

  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero-section-alt h2 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-align: center;
    color: inherit;
  }

  .section-description {
    font-size: 1.25rem;
    text-align: center;
    margin-bottom: 2rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
    color: inherit;
  }

  .feature-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .feature-item {
    display: flex;
    align-items: center;
    font-size: 1.1rem;
    padding: 0.75rem;
    border-radius: 0.5rem;
  }

  .feature-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
    align-items: stretch;
  }

  .feature-card {
    margin-top: 0;
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    transition: transform 0.2s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: flex-start;
    align-items: center;
  }

  .feature-card:hover {
    transform: translateY(-4px);
  }

  .feature-icon {
    font-size: 3rem;
    margin: 0 0 1rem 0;
    display: block;
  }

  .feature-card h4 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: inherit;
  }

  .feature-card p {
    font-size: 0.95rem;
    line-height: 1.5;
    color: inherit;
    opacity: 0.9;
    margin: 0;
  }

  /* Audit Log Animation */
  .audit-log-animation {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
    width: 100%;
    font-family: monospace;
    font-size: 0.75rem;
  }

  .audit-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .audit-title {
    font-weight: 600;
  }

  .live-indicator {
    background: #ef4444;
    color: white;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.625rem;
    font-weight: 600;
    animation: pulse 2s infinite;
  }

  .audit-entries {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    height: 120px;
    overflow: hidden;
    position: relative;
  }

  .audit-entry {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 0.5rem;
    align-items: center;
    padding: 0.25rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 0.25rem;
    background: rgba(255, 255, 255, 0.5);
    opacity: 0;
    animation: logTail 12s ease-in-out infinite;
    transform: translateY(100px);
  }

  .audit-entry[data-entry="1"] { animation-delay: 0s; }
  .audit-entry[data-entry="2"] { animation-delay: 2s; }
  .audit-entry[data-entry="3"] { animation-delay: 4s; }
  .audit-entry[data-entry="4"] { animation-delay: 6s; }
  .audit-entry[data-entry="5"] { animation-delay: 8s; }
  .audit-entry[data-entry="6"] { animation-delay: 10s; }

  .timestamp {
    color: #6b7280;
    font-size: 0.625rem;
  }

  .action {
    font-size: 0.6875rem;
  }

  .status {
    font-weight: 600;
  }

  /* Analytics Chart Animation */
  .analytics-chart {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
    width: 100%;
  }

  .chart-header {
    margin-bottom: 1rem;
    text-align: center;
  }

  .chart-title {
    font-weight: 600;
    font-size: 0.875rem;
  }

  .chart-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .chart-bars {
    display: flex;
    justify-content: space-between;
    align-items: end;
    height: 80px;
    gap: 0.25rem;
  }

  .bar {
    background: linear-gradient(to top, #3b82f6, #60a5fa);
    border-radius: 0.125rem 0.125rem 0 0;
    width: 100%;
    animation: growBar 2s ease-out forwards;
    transform-origin: bottom;
    transform: scaleY(0);
  }

  .bar-1 { animation-delay: 0.2s; height: 40%; }
  .bar-2 { animation-delay: 0.4s; height: 65%; }
  .bar-3 { animation-delay: 0.6s; height: 50%; }
  .bar-4 { animation-delay: 0.8s; height: 80%; }
  .bar-5 { animation-delay: 1.0s; height: 90%; }
  .bar-6 { animation-delay: 1.2s; height: 75%; }

  .chart-labels {
    display: flex;
    justify-content: space-between;
    font-size: 0.625rem;
    color: #6b7280;
  }

  /* Deployment Animation */
  .deployment-animation {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
    width: 100%;
  }

  .deployment-header {
    margin-bottom: 1rem;
    text-align: center;
  }

  .deployment-title {
    font-weight: 600;
    font-size: 0.875rem;
  }

  .deployment-steps {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .step {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
  }

  .step-indicator {
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .step.completed .step-indicator {
    background: #10b981;
    color: white;
  }

  .step.deploying .step-indicator {
    background: #f59e0b;
    color: white;
  }

  .step.pending .step-indicator {
    background: #d1d5db;
    color: #6b7280;
  }

  .spinner {
    animation: spin 1s linear infinite;
  }

  .step.deploying {
    animation: deploymentProgress 4s ease-in-out infinite;
  }

  /* Keyframe Animations */
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  @keyframes logTail {
    0% {
      opacity: 0;
      transform: translateY(100px);
    }
    8.33% {
      opacity: 1;
      transform: translateY(0);
      border-color: rgba(34, 197, 94, 0.4);
      box-shadow: 0 1px 3px rgba(34, 197, 94, 0.2);
    }
    16.66% {
      border-color: rgba(0, 0, 0, 0.1);
      box-shadow: none;
    }
    83.33% {
      opacity: 1;
      transform: translateY(0);
    }
    100% {
      opacity: 0;
      transform: translateY(-30px);
    }
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes growBar {
    from {
      transform: scaleY(0);
    }
    to {
      transform: scaleY(1);
    }
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes deploymentProgress {
    0%, 100% {
      background: rgba(245, 158, 11, 0.1);
    }
    50% {
      background: rgba(245, 158, 11, 0.2);
    }
  }

  @keyframes progressFill {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes barGrow {
    from {
      height: 0;
    }
    to {
      height: var(--target-height, 100%);
    }
  }

  @keyframes toolInvocationFlow {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    50% {
      opacity: 1;
      transform: translateY(0);
    }
    60% {
      opacity: 0.5;
      transform: translateY(-5px);
    }
    100% {
      opacity: 0;
      transform: translateY(-10px);
      height: 0;
      margin: 0;
      padding: 0;
    }
  }

  @keyframes pipelineResultsReveal {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Tool Invocation Animation */
  .tool-invocation {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 0.5rem;
    margin: 0.5rem 0;
    opacity: 1;
    animation: toolInvocationFlow 5s ease-in-out forwards;
  }

  .tool-indicator {
    animation: spin 1s linear infinite;
  }

  .tool-text {
    font-style: italic;
    color: #1264a3;
    font-size: 0.8rem;
  }

  .tool-progress {
    flex: 1;
    height: 4px;
    background: rgba(59, 130, 246, 0.2);
    border-radius: 2px;
    overflow: hidden;
  }

  .progress-bar {
    height: 100%;
    background: #3b82f6;
    width: 0;
    animation: progressFill 2s ease-out forwards;
    animation-delay: 0.5s;
  }

  /* Pipeline Results Transition */
  .pipeline-results {
    opacity: 0;
    transform: translateY(10px);
    animation: pipelineResultsReveal 2s ease-out forwards;
    animation-delay: 3s;
  }

  /* Bar Chart Styling */
  .bar-chart {
    margin-top: 0.75rem;
    background: rgba(0, 0, 0, 0.02);
    border-radius: 0.5rem;
    padding: 0.75rem;
  }

  .bar-chart .chart-header {
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .bar-chart .chart-title {
    font-weight: 600;
    font-size: 0.8rem;
    color: #1d1c1d;
  }

  .bar-chart .chart-bars {
    display: flex;
    justify-content: space-between;
    align-items: end;
    gap: 0.5rem;
    height: 120px;
  }

  .bar-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    gap: 0.25rem;
  }

  .bar-group .bar {
    width: 100%;
    height: 100%;
    position: relative;
    background: #f3f4f6;
    border-radius: 0.25rem;
    overflow: hidden;
  }

  .bar-fill {
    width: 100%;
    border-radius: 0.25rem;
    animation: barGrow 1.5s ease-out forwards;
    height: 0;
    position: absolute;
    bottom: 0;
  }

  .bar-large .bar-fill {
    height: 35%;
    background: linear-gradient(to top, #dc2626, #ef4444);
    animation-delay: 3.5s;
  }

  .bar-medium .bar-fill {
    height: 45%;
    background: linear-gradient(to top, #ea580c, #f97316);
    animation-delay: 3.7s;
  }

  .bar-small .bar-fill {
    height: 60%;
    background: linear-gradient(to top, #059669, #10b981);
    animation-delay: 3.9s;
  }

  .bar-tiny .bar-fill {
    height: 40%;
    background: linear-gradient(to top, #2563eb, #3b82f6);
    animation-delay: 4.1s;
  }

  .bar-label {
    font-size: 0.65rem;
    font-weight: 500;
    color: #4b5563;
    text-align: center;
  }

  .bar-value {
    font-size: 0.6rem;
    color: #6b7280;
    text-align: center;
  }


  .mcp-section .feature-item,
  .api-section .feature-item {
