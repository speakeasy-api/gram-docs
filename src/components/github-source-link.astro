---
import { Icon } from "@astrojs/starlight/components";

const { editUrl } = Astro.locals.starlightRoute;
---

{editUrl && (
  <div class="github-edit-link">
    <a
      href={editUrl}
      class="edit-link"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Icon name="github" size="1em" />
      Edit on GitHub
    </a>
  </div>
)}

<style>
  .github-edit-link {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--sl-color-hairline);
  }

  .edit-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--sl-color-gray-3);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .edit-link:hover {
    color: var(--sl-color-text-accent);
  }
</style>